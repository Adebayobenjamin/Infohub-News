<%- include ('partials/header.ejs') %> 
    <!-- hero
    ================================================== -->

    <% const articles = data.articles %> 
    <section id="hero" class="s-hero">

        <div class="s-hero__slider">

            <div class="s-hero__slide">

                <div class="s-hero__slide-bg" style="background-image: url('<%=articles[0].urlToImage%>');"></div>

                <div class="row s-hero__slide-content animate-this">
                    <div class="column">
                        <div class="s-hero__slide-meta">
                            <span class="byline"> 
                                Posted by 
                                <span class="author">
                                    <a href="#0"><%= articles[0].author %> </a>
                                </span>
                            </span>
                        </div>
                        <h1 class="s-hero__slide-text">
                            <a class="reader" href="/reader?q=<%=articles[0].description %>" data-url="/reader?q=<%=articles[0].description %>" data-link="<%=articles[0].url%>">
                                <%= articles[0].title %> 
                            </a>
                        </h1>
                    </div>
                </div>

            </div> <!-- end s-hero__slide -->

            <div class="s-hero__slide">

                <div class="s-hero__slide-bg" style="background-image: url('<%=articles[1].urlToImage%>');"></div>

                <div class="row s-hero__slide-content animate-this">
                    <div class="column">
                        <div class="s-hero__slide-meta">
                            <span class="byline"> 
                                Posted by 
                                <span class="author">
                                    <a href="#0"><%=articles[1].author%></a>
                                </span>
                            </span>
                        </div>
                        <h1 class="s-hero__slide-text">
                            <a class="reader" href="/reader?q=<%=articles[1].description %>" data-url="/reader?q=<%=articles[1].description%>" data-link="<%=articles[1].url%>">
                                <%= articles[1].title %>
                            </a>
                        </h1>
                    </div>
                </div>

            </div> <!-- end s-hero__slide -->

            <div class="s-hero__slide"">

                <div class="s-hero__slide-bg" style="background-image: url('<%=articles[2].urlToImage%>');"></div>

                <div class="row s-hero__slide-content animate-this">
                    <div class="column">
                        <div class="s-hero__slide-meta">
                            
                            <span class="byline"> 
                                Posted by 
                                <span class="author">
                                    <a><%= articles[2].author %></a>
                                </span>
                            </span>
                        </div>
                        <h1 class="s-hero__slide-text">
                            <a class="reader" href="/reader?q=<%=articles[2].description %>" data-url="/reader?q=<%=articles[2].description %>" data-link="<%=articles[2].url%>">
                                '<%= articles[2].title %>
                            </a>
                        </h1>
                    </div>
                </div>

            </div> <!-- end s-hero__slide -->

        </div> <!-- end s-hero__slider -->

        <div class="s-hero__social hide-on-mobile-small">
            <p>Follow</p>
            <span></span>
            <ul class="s-hero__social-icons">
                <li><a href="https://web.facebook.com/benjamin.adebayo.984"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
                <li><a href="https://twitter.com/AdebayoBenjam19"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
                <li><a href="https://www.instagram.com/drell23_/"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
            </ul>
        </div> <!-- end s-hero__social -->

        <div class="nav-arrows s-hero__nav-arrows">
            <button class="s-hero__arrow-prev">
                <svg viewBox="0 0 15 15" xmlns="http://www.w3.org/2000/svg" width="15" height="15"><path d="M1.5 7.5l4-4m-4 4l4 4m-4-4H14" stroke="currentColor"></path></svg>
            </button>
            <button class="s-hero__arrow-next">
               <svg viewBox="0 0 15 15" xmlns="http://www.w3.org/2000/svg" width="15" height="15"><path d="M13.5 7.5l-4-4m4 4l-4 4m4-4H1" stroke="currentColor"></path></svg>
            </button>
        </div> <!-- end s-hero__arrows -->

    </section> <!-- end s-hero -->


    <!-- content
    ================================================== -->
    <section class="s-content s-content--no-top-padding">


        <!-- masonry
        ================================================== -->
        <div class="s-bricks">

            <div class="masonry">
                <div class="bricks-wrapper h-group">

                    <div class="grid-sizer"></div>

                    <div class="lines">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>

                   <% for(i=3; i< 20; i++){ const article = articles[i] %>
                    
                    <article class="brick entry" data-aos="fade-up">
    
                        <div class="entry__thumb">
                            <a href="#" class="thumb-link">
                                <img src="<%=article.urlToImage%>" alt="">
                            </a>
                        </div> <!-- end entry__thumb -->
    
                        <div class="entry__text">
                            <div class="entry__header">
                                <h1 class="entry__title"><a href=""></a></h1>
                                
                                <div class="entry__meta">
                                    <span class="byline"">By:
                                        <span class='author'>
                                            <a ><%=article.author%> </a>
                                    </span>
                                </span>
                                </div>
                            </div>
                            <div class="entry__excerpt">
                                <p>
                                    <%=article.description%> 
                                </p>
                            </div>
                            <a class="entry__more-link reader" href="/reader?q=<%=article.description %>" data-url="/reader?q=<%=article.description %>">Learn More</a>
                        </div> <!-- end entry__text -->
                    
                    </article> <!-- end article -->

                  <% } %> 

                </div> <!-- end brick-wrapper -->

            </div> <!-- end masonry -->

            <div class="row">
                <div class="column large-12">
                </div> <!-- end column -->
            </div> <!-- end row -->

        </div> <!-- end s-bricks -->

    </section> <!-- end s-content -->
    <script>
        const readerlink = document.getElementsByClassName('reader');
        for (let i = 0; i < readerlink.length; i++) {
            const reader = readerlink[i];
            reader.addEventListener('click', (e)=>{
                e.preventDefault();
                const url = reader.dataset.url;
                const link = reader.dataset.link
                var trimurl = url.substr(0, 95);
                // to remove the error that occurs when the linl ends with and / or .
                if(trimurl.endsWith('and') || trimurl.endsWith('or')){
                    trimurl = trimurl.substr(0, 90);
                }
                location.assign(trimurl + '&link=' + link);
            })           
        }
    </script>

