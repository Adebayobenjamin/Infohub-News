<%- include('partials/header2') %> 

<% const articles = data.articles %> 
<% if(data.articles == '') {%>
   
    <section class="s-content">

        <div class="row">
            <div class="column large-12">
                <h4>Sorry story is not available :(</h4>

        </div> <!-- end row -->
    </section> <!-- end s-content -->
<% } %> 

<!-- content
    ================================================== -->
    <section class="s-content">

        <div class="row">
            <div class="column large-12">

                <article class="s-content__entry format-standard">

                    <div class="s-content__media">
                        <div class="s-content__post-thumb">
                            <img src="<%= articles[0].urlToImage %> " alt="">
                        </div>
                    </div> <!-- end s-content__media -->

                    <div class="s-content__entry-header">
                        <h1 class="s-content__title s-content__title--post"><%= articles[0].title %> </h1>
                    </div> <!-- end s-content__entry-header -->

                    <div class="s-content__primary">

                        <div class="s-content__entry-content">

                            <p class="lead">
                           <%= articles[0].description %> 
                            </p>
    
                            <p><%= articles[0].content %><span><a href="<%= articles[0].url %> ">Link to Full story</a> </span> </p>
                        </div> <!-- end s-entry__entry-content -->

                        <div class="s-content__entry-meta">

                            <div class="entry-author meta-blk">
                                <div class="author-avatar">
                                    <img class="avatar" src="<%= articles[0].urlToImage %> " alt="">
                                </div>
                                <div class="byline">
                                    <span class="bytext">Posted By</span>
                                    <a href="#0"><%= articles[0].author %> </a>
                                </div>
                            </div>

                            <div class="meta-bottom">
                                
                                <div class="entry-cat-links meta-blk">
                                    <div class="cat-links">
                                        
                                    </div>

                                    <span>On</span>
                                   <%= articles[0].publishedAt %> 
                                </div>
                            </div>

                        </div> <!-- s-content__entry-meta -->

                    </div> <!-- end s-content__primary -->
                </article> <!-- end entry -->

            </div> <!-- end column -->
        </div> <!-- end row -->
    </section> <!-- end s-content -->

<%- include('partials/footer') %> 